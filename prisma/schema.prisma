generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  email      String         @unique
  password   String?         
  name       String
  profilepic UserProfilepic?
  isOAuth    Boolean?
  provider   Provider      @default(standard)
  role       Role           @default(user)


  status     Status         @default(pending)

  
  emailConfirmationCode   String



}



model Products {


    id                String         @id @default(auto()) @map("_id") @db.ObjectId
    name              String
    description       String
    price             Int
    discountedprice   Int
    color             String // ARRAY OF COLORS HOGA REAL ME
    sizes             String // ARRAY OF SIZES HOGA REAL ME
    leftinstock       Int




}


model Categories {
  id      String         @id @default(auto()) @map("_id") @db.ObjectId
  name    String

  

}





enum Status {
  pending
  active
}


type UserProfilepic {
  avatarurl String
}


enum Provider {
  google
  twitter
  standard
}

enum Role {
  user
  admin
  editor
}
